<Window x:Class="zad3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad3"
        mc:Ignorable="d"
        Title="Caesar Cipher - Encryption" Height="450" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Enter text to encrypt:"/>
        <TextBox x:Name="InputTextBox" AcceptsReturn="True" Height="100" Margin="0 5"/>
        <TextBlock Text="Enter shift:"/>
        <TextBox x:Name="ShiftTextBox" Margin="0 5"/>
        <Button Content="Encrypt" Click="EncryptButton_Click" Margin="0 5"/>
        <TextBlock Text="Encrypted text:"/>
        <TextBox x:Name="ResultTextBox" IsReadOnly="True" Height="100" Margin="0 5"/>
        <Button Content="Open Decryption Window" Click="OpenDecryptionWindowButton_Click"/>
    </StackPanel>
</Window>
